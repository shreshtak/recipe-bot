{
    "version": 2,
    "builds": [
      {
        "src": "client-react/package.json",
        "use": "@vercel/static-build",
        "config": {
          "root": "client"
        }
      },
      {
        "src": "server-python/requirements.txt",
        "use": "@vercel/python",
        "config": {
          "maxDuration": 10,
          "builds": [
            {
              "src": "server-python/app.py",
              "use": "@vercel/python"
            }
          ]
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/client/$1"
      },
      {
        "src": "/api/(.*)",
        "dest": "/server-python/app.py"
      }
    ]
  }
  